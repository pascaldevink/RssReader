{% extends '::base.html.twig' %}

{% block title %}
Rss Reader
{% endblock %}

{% block stylesheets %}
	{{ parent() }}

	{% stylesheets output='css/*.css' filter='less,?yui_css,cssrewrite,'
					'bundles/pascalfeeddisplayer/css/bootstrap.min.css'
					'@PascalFeedDisplayerBundle/Resources/public/css/base.less'
					'bundles/pascalfeeddisplayer/css/bootstrap-responsive.min.css'
					'@PascalFeedDisplayerBundle/Resources/public/css/jquery.tagsinput.css' %}
	{# If your files are in web/css/, call them with: 'css/mystyle.css' #}
		<link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="screen" />
	{% endstylesheets %}
{% endblock %}

{#filter='yui_js'#}
{% block javascripts %}
	{{ parent() }}

	{% javascripts output='js/compressed.js'
		'@PascalFeedDisplayerBundle/Resources/public/js/modernizr.min.js'
		'@PascalFeedDisplayerBundle/Resources/public/js/jquery.min.js'
		'@PascalFeedDisplayerBundle/Resources/public/js/bootstrap.min.js'
		'@PascalFeedDisplayerBundle/Resources/public/js/jquery.tagsinput.js'
		'@PascalFeedDisplayerBundle/Resources/public/js/newEntriesChecker.coffee'
		'@PascalFeedDisplayerBundle/Resources/public/js/feedEntryTools.coffee'
		'https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.13/jquery-ui.min.js'
	%}
	<script src="{{ asset_url }}"></script>
	{% endjavascripts %}
{% endblock %}

{% block body %}
<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</a>
			<a class="brand" href="{{ path('PascalFeedDisplayerBundle_homepage') }}">
				Feed reader
			</a>
			<div class="nav-collapse">
				<ul class="nav">
					{% if app.user %}
					<li>
						<a href="{{ path('PascalFeedDisplayerBundle_settings') }}">Settings</a>
					</li>
					<li>
						<a href="#">Account</a>
					</li>
					
					<li class="pull-right">
						<a href="{{ path('PascalFeedDisplayerBundle_logout') }}">Logout</a>
					</li>
					{% endif %}
				</ul>
			</div>
		</div>
	</div>
</div>

<div class="container">
	<div class="row-fluid">
		<div class="span3">
			{% block sidebar %}
			{% endblock %}
		</div>
		<div class="span9 listing">
			{% block content %}{% endblock %}
		</div>
	</div>
</div>
{% endblock %}