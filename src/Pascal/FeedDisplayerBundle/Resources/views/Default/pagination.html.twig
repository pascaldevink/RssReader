<div class="pagination">
	<ul>
		{% if page-1 < 1 %}
		<li class="previous disabled">
			<a href="">&larr; Previous</a>
		</li>
		{% else %}
		<li class="previous">
			<a href="{{ path('PascalFeedDisplayerBundle_homepage', { 'page' : page-1 }) }}">&larr; Previous</a>
		</li>
		{% endif %}

		{% for i in range(1, numberOfPages) %}
			{% if i == page %}
			<li class="active">
			{% else %}
			<li>
			{% endif %}
				<a href="{{ path('PascalFeedDisplayerBundle_homepage', { 'page' : i }) }}">{{ i }}</a>
			</li>
		{% endfor%}

		{% if page+1 > numberOfPages %}
		<li class="next disabled">
			<a href="">Next &rarr;</a>
		</li>
		{% else %}
		<li class="next">
			<a href="{{ path('PascalFeedDisplayerBundle_homepage', { 'page' : page+1 }) }}">Next &rarr;</a>
		</li>
		{% endif %}
	</ul>
</div>